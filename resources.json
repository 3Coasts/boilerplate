[

  {
    "name": "user",
    "model": {
      "attributes": {
        "name": { "type": "string", "required": true },
        "phone": { "type": "string", "unique": true },
        "authToken": { "type": "string", "remove": true },
        "accessTokens": { "type": "array", "remove": true }
      }
    },
    "routes": [
      { "method": "post", "path": "user", "description": "Creates a new user" },
      { "method": "post", "path": "user/token", "description": "Client sends phone number and gets a token" },
      { "method": "post", "path": "user/login", "description": "Client post phone and token to authenticate" },
      { "method": "get", "path": "user/me", "protect": true, "description": "Get logged in user" },
      { "method": "get", "path": "user/logout", "protect": true, "description": "Logout" },
      { "method": "get", "path": "user/:id", "protect": true, "description": "Get user info" }
    ]
  }, {
    "name": "article",
    "model": {
      "attributes": {
        "title": { "type": "string", "required": true },
        "summary": { "type": "string" },
        "body": { "type": "string" },
        "author": { "model": "user" }
      },
      "populate": "author"
    },
    "routes": [
      { "method": "get", "path": "article", "description": "Get article collection" },
      { "method": "post", "path": "article", "protect": true, "description": "Creates a new article" },
      { "method": "get", "path": "article/:id", "description": "Get article info" },
      { "method": "put", "path": "article/:id", "protect": true, "description": "Update an article" },
      { "method": "delete", "path": "article/:id", "protect": true, "description": "Deletes an article" }
    ],
    "view": {
      "titleField": "title",
      "teaserFields": ["summary"],
      "detailFields": ["body"]
    }
  }, {
    "name": "widget",
    "model": {
      "attributes": {
        "name": { "type": "string", "required": true }
      }
    },
    "routes": [
      { "method": "get", "path": "widget", "description": "Get widget collection" },
      { "method": "post", "path": "widget", "description": "Creates a new widget" },
      { "method": "get", "path": "widget/:id", "description": "Get widget info" },
      { "method": "put", "path": "widget/:id", "description": "Update a widget" },
      { "method": "delete", "path": "widget/:id", "description": "Deletes a widget" }
    ],
    "view": {
      "titleField": "name",
      "teaserFields": [],
      "detailFields": []
    }
  }

]