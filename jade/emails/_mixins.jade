mixin link(text,url)
  table(width='520', border='0', cellspacing='0', cellpadding='0', align='center')
    tr
      td(height='15')
    tr
      td
        table
          tr
            td(align='left', bgcolor='#FF9800', style='background: #FF9800; padding: 15px 18px; -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px;')
              a(href='#{url}', style='font-size: 16px; text-decoration: none; color: #ffffff;')=text
    tr
      td(height='15')
mixin p(content)
  p(style='margin-top:10px;margin-bottom:10px;color:#4C5462;')!=content
mixin title(content)
  h3(style='margin-bottom:5px;color:#4C5462;')!=content