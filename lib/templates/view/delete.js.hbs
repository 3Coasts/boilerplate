var app = require('ampersand-app')
  , View = require('ampersand-view')
  , html = require('./delete.html');

module.exports = View.extend({
  template: html,
  events: {
    'click [data-hook=delete]': 'deleteModel'
  },
  deleteModel: function(e) {
    this.model.destroy({
      success: function() {
        app.msg('{{nameAllCaps}}_DELETED');
        app.nav('{{name}}');
      }
    });
  }
});